<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtVw_simon_says_result"
        android:textColor="@android:color/white"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        tools:text="bla bla"
        android:textSize="25sp"
        android:text="@string/activity_main_age"/>

    <ImageView
        android:id="@+id/imgVw_simon_says_button_yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/imgVw_simon_says_button_red"
        app:srcCompat="@drawable/quarter_circle_yellow"/>

    <ImageView
        android:id="@+id/imgVw_simon_says_button_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imgVw_simon_says_button_yellow"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="44dp"
        app:srcCompat="@drawable/quarter_circle_green"/>

    <ImageView
        android:id="@+id/imgVw_simon_says_button_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imgVw_simon_says_button_blue"
        app:srcCompat="@drawable/quarter_circle_red"/>

    <ImageView
        android:id="@+id/imgVw_simon_says_button_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgVw_simon_says_button_green"
        android:layout_toStartOf="@+id/imgVw_simon_says_button_green"
        app:srcCompat="@drawable/quarter_circle_blue"/>

    <ImageView
        android:id="@+id/imgVw_simon_says_button_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imgVw_simon_says_button_green"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp"
        app:srcCompat="@drawable/play_btn"/>

</RelativeLayout>
